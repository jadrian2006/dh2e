{
    "name": "dh2e",
    "version": "0.1.2",
    "description": "Foundry VTT system for Warhammer 40k Dark Heresy 2nd Edition",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:dev": "vite build --mode development",
        "watch": "vite build --watch --mode development",
        "hot": "vite",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write \"src/**/*.{ts,svelte,scss}\"",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "js-yaml": "^4.1.1",
        "svelte": "^5.40.1"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@types/js-yaml": "^4.0.9",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.32.0",
        "eslint": "^9.27.0",
        "jsdom": "^28.1.0",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "sass": "^1.93.2",
        "typescript": "~5.9.3",
        "vite": "~7.2.4",
        "vite-plugin-checker": "^0.11.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.1"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=22"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@parcel/watcher",
            "esbuild"
        ]
    }
}
