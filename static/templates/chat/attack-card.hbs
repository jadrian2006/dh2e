<div class="dh2e chat-card attack-card">
    <header class="card-header {{#if success}}success{{else}}failure{{/if}}">
        <h3>{{weaponName}}</h3>
        <span class="fire-mode">{{fireMode}}</span>
    </header>
    <div class="card-body">
        <p class="roll-summary">{{format "DH2E.Check.Roll" roll=roll target=target}}</p>
        {{#if success}}
        <p class="hit-count">{{format "DH2E.Attack.Hits" count=hitCount}}</p>
        <ul class="hit-locations">
            {{#each hits}}
            <li>{{this.locationLabel}}</li>
            {{/each}}
        </ul>
        <button class="btn roll-damage" data-action="roll-damage">
            {{localize "DH2E.Attack.RollDamage"}}
        </button>
        {{/if}}

        <div class="card-actions">
            <button class="fate-btn" data-action="spend-fate" title="{{localize "DH2E.Fate.InvokeFate"}}">
                <i class="fas fa-star"></i>
            </button>
            {{#if isGM}}
            <button class="gm-override-btn" data-action="gm-override" title="GM Override"><i class="fas fa-cog"></i></button>
            {{/if}}
        </div>
    </div>
</div>
