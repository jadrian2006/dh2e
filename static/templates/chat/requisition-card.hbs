<div class="dh2e chat-card requisition-card {{#if success}}success{{else}}failure{{/if}}">
    <header class="card-header">
        <h3><i class="fas fa-coins"></i> {{localize "DH2E.Requisition.Title"}}</h3>
        <span class="result-badge">
            {{#if success}}
                {{localize "DH2E.Check.Success"}} — {{format "DH2E.Check.DegreesOfSuccess" count=degrees}}
            {{else}}
                {{localize "DH2E.Check.Failure"}} — {{format "DH2E.Check.DegreesOfFailure" count=degrees}}
            {{/if}}
        </span>
    </header>
    <div class="card-body">
        <div class="req-info">
            <span class="req-item">{{itemName}}</span>
            <span class="req-avail">{{availability}}</span>
        </div>
        <p class="roll-summary">{{format "DH2E.Check.Roll" roll=roll target=target}}</p>

        {{#if success}}
        <p class="req-result">{{localize "DH2E.Requisition.Acquired"}}</p>
        {{else}}
        <p class="req-result">{{localize "DH2E.Requisition.Failed"}}</p>
        {{/if}}

        {{#if influenceLost}}
        <p class="influence-lost">
            <i class="fas fa-arrow-down"></i> {{localize "DH2E.Requisition.InfluenceLost"}}
        </p>
        {{/if}}

        {{#if isGM}}
        <button class="gm-override-btn" data-action="gm-override" title="GM Override"><i class="fas fa-cog"></i></button>
        {{/if}}
    </div>
</div>
