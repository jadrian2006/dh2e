<div class="dh2e chat-card damage-card">
    <header class="card-header">
        <h3>{{weaponName}} â€” {{localize "DH2E.Damage.WoundsDealt"}}</h3>
    </header>
    <div class="card-body">
        {{#each hits}}
        <div class="damage-hit">
            <h4>{{this.locationLabel}}</h4>
            {{#if ../isGM}}
            <table class="damage-breakdown">
                <tr>
                    <td>{{localize "DH2E.Damage.Raw"}}</td>
                    <td class="value">{{this.rawDamage}}</td>
                </tr>
                <tr>
                    <td>{{localize "DH2E.Damage.AP"}}</td>
                    <td class="value">-{{this.effectiveAP}}</td>
                </tr>
                {{#if (gt this.penetration 0)}}
                <tr class="penetration">
                    <td>{{localize "DH2E.Damage.Penetration"}}</td>
                    <td class="value">{{this.penetration}}</td>
                </tr>
                {{/if}}
                <tr>
                    <td>{{localize "DH2E.Damage.TB"}}</td>
                    <td class="value">-{{this.toughnessBonus}}</td>
                </tr>
                <tr class="total">
                    <td>{{localize "DH2E.Damage.WoundsDealt"}}</td>
                    <td class="value wounds">{{this.woundsDealt}}</td>
                </tr>
            </table>
            {{else}}
            <div class="damage-player-summary">
                <span class="wounds-label">{{localize "DH2E.Damage.WoundsDealt"}}</span>
                <span class="wounds-value">{{this.woundsDealt}}</span>
            </div>
            {{/if}}
        </div>
        {{/each}}

        {{#if targetId}}
        <div class="damage-apply-controls">
            {{#unless applied}}
            <button class="btn apply-damage" data-action="apply-damage" data-target-id="{{targetId}}">
                <i class="fas fa-crosshairs"></i> {{localize "DH2E.Damage.Apply"}}
            </button>
            {{/unless}}
            {{#if applied}}
            <div class="damage-applied">
                <span class="applied-label"><i class="fas fa-check"></i> {{localize "DH2E.Damage.Applied"}}</span>
                {{#if ../isGM}}
                <button class="btn revert-damage" data-action="revert-damage" data-target-id="{{targetId}}" title="{{localize "DH2E.Damage.Revert"}}">
                    <i class="fas fa-undo"></i>
                </button>
                {{/if}}
            </div>
            {{/if}}
        </div>
        {{/if}}
    </div>
</div>
